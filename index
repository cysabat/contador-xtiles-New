<body>
  <div class="container">

    <div class="card">
      <h1>üí∞ Dias sem gastar dinheiro</h1>
      <div class="counter" id="counter">0 dias</div>

      <div class="meta">
        Meta: <input id="goalInput" type="number" min="1" />
        dias
      </div>

      <div class="progress">
        <div id="progressBar"></div>
      </div>

      <div class="stats">
        <div>üèÜ Recorde: <span id="record">0</span> dias</div>
        <div>üìÖ Desde: <span id="since"></span></div>
      </div>

      <button class="panic" onclick="panic()">üö® Gastei dinheiro</button>
      <button class="toggle" onclick="toggleTheme()">üåó Modo claro / escuro</button>
    </div>

    <div class="card">
      <h1>üìà Hist√≥rico</h1>
      <canvas id="chart"></canvas>
    </div>

  </div>

<script>
  const STORAGE = {
    start: "ns_start",
    record: "ns_record",
    history: "ns_history",
    goal: "ns_goal",
    theme: "ns_theme"
  };

  const now = () => Date.now();

  function getStart() {
    let s = localStorage.getItem(STORAGE.start);
    if (!s) {
      s = now();
      localStorage.setItem(STORAGE.start, s);
    }
    return Number(s);
  }

  function getDays(diff) {
    return Math.floor(diff / (1000 * 60 * 60 * 24));
  }

  function update() {
    const start = getStart();
    const diff = now() - start;
    const days = getDays(diff);

    document.getElementById("counter").innerText = `${days} dias`;
    document.getElementById("since").innerText =
      new Date(start).toLocaleDateString("pt-BR");

    const record = Number(localStorage.getItem(STORAGE.record) || 0);
    if (days > record) {
      localStorage.setItem(STORAGE.record, days);
    }
    document.getElementById("record").innerText =
      localStorage.getItem(STORAGE.record);

    const goal = Number(localStorage.getItem(STORAGE.goal) || 30);
    document.getElementById("goalInput").value = goal;

    const progress = Math.min((days / goal) * 100, 100);
    document.getElementById("progressBar").style.width = progress + "%";

    if (days === goal) {
      alert("üéâ Parab√©ns! Voc√™ bateu sua meta!");
    }
  }

  function panic() {
    const reason = prompt("O que voc√™ comprou?");
    if (!reason) return;

    const history = JSON.parse(localStorage.getItem(STORAGE.history) || "[]");
    history.push({
      date: new Date().toLocaleDateString("pt-BR"),
      days: getDays(now() - getStart()),
      reason
    });

    localStorage.setItem(STORAGE.history, JSON.stringify(history));
    localStorage.setItem(STORAGE.start, now());
    updateChart();
    update();
  }

  function updateChart() {
    const history = JSON.parse(localStorage.getItem(STORAGE.history) || "[]");

    chart.data.labels = history.map(h => h.date);
    chart.data.datasets[0].data = history.map(h => h.days);
    chart.update();
  }

  document.getElementById("goalInput").addEventListener("change", e => {
    localStorage.setItem(STORAGE.goal, e.target.value);
    update();
  });

  function toggleTheme() {
    document.body.classList.toggle("light");
    localStorage.setItem(
      STORAGE.theme,
      document.body.classList.contains("light") ? "light" : "dark"
    );
  }

  if (localStorage.getItem(STORAGE.theme) === "light") {
    document.body.classList.add("light");
  }

  const ctx = document.getElementById("chart");
  const chart = new Chart(ctx, {
    type: "bar",
    data: {
      labels: [],
      datasets: [{
        label: "Dias sem gastar",
        data: [],
      }]
    },
    options: {
      plugins: { legend: { display: false } }
    }
  });

  updateChart();
  update();
  setInterval(update, 60000);
</script>

</body>
